<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://taskTypeSimpleListView.title"
      focusComponent="taskTypesDataGrid">
    <data>
        <collection id="taskTypesDc"
                    class="com.company.timesheets.entity.TaskType">
            <fetchPlan extends="_base"/>
            <loader id="taskTypesDl" readOnly="true">
                <query>
                    <![CDATA[select e from ts_TaskType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <propertyFilter component="filter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
        <settings auto="true"/>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <propertyFilter id="filter"
                        dataLoader="taskTypesDl" property="name"
                        operation="CONTAINS"
                        labelVisible="false"
                        width="100%" maxWidth="30em">
            <textField id="filterField"
                       placeholder="Start typing..."
                       clearButtonVisible="true">
                <prefix>
                    <icon icon="SEARCH"/>
                </prefix>
            </textField>
        </propertyFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="taskTypesDataGrid.createAction"/>
            <button id="editButton" action="taskTypesDataGrid.editAction"/>
            <button id="removeButton" action="taskTypesDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="taskTypesDl"/>
        </hbox>
        <dataGrid id="taskTypesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="taskTypesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="description"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
